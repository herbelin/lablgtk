class Progress abstract : Widget {
  "activity-mode"        gboolean             : Read / Write
  "show-text"            gboolean             : Read / Write
  "text-xalign"          gfloat               : Read / Write / NoSet
  "text-yalign"          gfloat               : Read / Write / NoSet
